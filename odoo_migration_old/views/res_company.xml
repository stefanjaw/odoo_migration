<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit Form view -->
    <record id="res_company_inherit_migration" model="ir.ui.view">
    	<field name="name">res.company.form.inherit.migration</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="priority">98</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Migration">
                    <group>
                        <group>
   				<field name="remote_url"/>
				<field name="remote_db" />
				<field name="remote_user"/>
				<field name="remote_pwd"  password="True" />
                        </group>
                    </group>
                </page>
            </xpath>
	</field>
     </record> 
</odoo>
